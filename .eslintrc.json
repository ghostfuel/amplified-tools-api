{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "globals": {
    "SpotifyApi": true,
    "jest": true
  },
  "extends": ["plugin:@typescript-eslint/recommended", "strongloop", "plugin:jest/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier", "jest"],
  "rules": {
    "quotes": [2, "double"],
    "max-len": ["error", 100, { "ignoreComments": true, "ignoreStrings": true }],
    "space-before-function-paren": ["error", { "anonymous": "ignore", "named": "never" }],
    "no-undef": "warn",
    "multiline-ternary": "off",
    "no-case-declarations": "off",
    "jest/no-conditional-expect": "off"
  }
}
