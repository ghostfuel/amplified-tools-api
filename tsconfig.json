{
  "compilerOptions": {
    "lib": ["ESNext"],
    "baseUrl": ".",
    "target": "es6",
    "paths": {
      "@custom/types/*": ["types/*"],
      "@common/*": ["common/*"],
      "@resources/*": ["resources/*"]
    },
    "sourceMap": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "include": ["resources/**/*.ts", "common/**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
